server {
    listen 443 ssl;
    server_name seventwelve.com www.seventwelve.com;

    ssl_certificate /etc/letsencrypt/live/seventwelve.in/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/seventwelve.in/privkey.pem;

    # Other SSL configurations can go here

    location / {
        # Your other location directives
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }
}
